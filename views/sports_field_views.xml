<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_sports_field_tree" model="ir.ui.view">
        <field name="name">sports.field.tree</field>
        <field name="model">sports.field</field>
        <field name="arch" type="xml">
            <tree string="Canchas Deportivas">
                <field name="code"/>
                <field name="name"/>
                <field name="sport_type"/>
                <field name="surface_type"/>
                <field name="capacity"/>
                <field name="hourly_rate" widget="monetary"/>
                <field name="booking_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_sports_field_form" model="ir.ui.view">
        <field name="name">sports.field.form</field>
        <field name="model">sports.field</field>
        <field name="arch" type="xml">
            <form string="Cancha Deportiva">
                <header>
                    <button name="action_view_bookings" type="object" 
                            string="Ver Reservas" class="oe_highlight"
                            invisible="booking_count == 0"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Inactiva" bg_color="text-bg-danger"
                            invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Ej: Cancha Principal"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Información Básica">
                            <field name="code"/>
                            <field name="sport_type"/>
                            <field name="surface_type"/>
                            <field name="capacity"/>
                            <field name="hourly_rate" widget="monetary"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group name="statistics" string="Estadísticas">
                            <field name="booking_count"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Horarios de Operación" name="schedule">
                            <group>
                                <group string="Horario de Atención">
                                    <field name="opening_time" widget="float_time"/>
                                    <field name="closing_time" widget="float_time"/>
                                </group>
                                <group string="Días Disponibles">
                                    <field name="monday"/>
                                    <field name="tuesday"/>
                                    <field name="wednesday"/>
                                    <field name="thursday"/>
                                    <field name="friday"/>
                                    <field name="saturday"/>
                                    <field name="sunday"/>
                                </group>
                            </group>
                        </page>
                        <page string="Descripción" name="description">
                            <field name="description" placeholder="Describe las características de la cancha..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_sports_field_kanban" model="ir.ui.view">
        <field name="name">sports.field.kanban</field>
        <field name="model">sports.field</field>
        <field name="arch" type="xml">
            <kanban string="Canchas">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="sport_type"/>
                <field name="hourly_rate"/>
                <field name="booking_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('sports.field', 'image', record.id.raw_value)" alt="Cancha"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="sport_type"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span>Código: <field name="code"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge text-bg-primary">
                                            <field name="booking_count"/> Reservas
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_sports_field_search" model="ir.ui.view">
        <field name="name">sports.field.search</field>
        <field name="model">sports.field</field>
        <field name="arch" type="xml">
            <search string="Buscar Canchas">
                <field name="name"/>
                <field name="code"/>
                <field name="sport_type"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Deporte" name="group_sport" 
                            context="{'group_by': 'sport_type'}"/>
                    <filter string="Tipo de Superficie" name="group_surface" 
                            context="{'group_by': 'surface_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_sports_field" model="ir.actions.act_window">
        <field name="name">Canchas Deportivas</field>
        <field name="res_model">sports.field</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera cancha deportiva
            </p>
            <p>
                Las canchas son los espacios que tus clientes podrán reservar.
            </p>
        </field>
    </record>

</odoo>